<Application
    x:Class="TwitchUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwitchUWP"
    RequestedTheme="Light">

    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="PageTitleStyle">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#FF6441A5"/>
            <Setter Property="Margin" Value="10,0,10,5"/>
        </Style>

        <Style TargetType="Image" x:Key="GameThumbnailStyle">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="140"/>
        </Style>

        <Style TargetType="Image" x:Key="StreamThumbnailStyle">
            <Setter Property="Width" Value="640" />
            <Setter Property="Height" Value="360" />
        </Style>

        <Style TargetType="TextBlock" x:Key="StreamTextStyle">
            <Setter Property="Margin" Value="10,0" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Application.Resources>

</Application>
