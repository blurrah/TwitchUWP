<Application
    x:Class="TwitchUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwitchUWP"
    RequestedTheme="Light">

    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="PageTitleStyle">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#FF6441A5"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style TargetType="Image" x:Key="GameThumbnailStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="Auto"/>
        </Style>

        <Style TargetType="Image" x:Key="StreamThumbnailStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="Auto"/>
        </Style>

        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="Foreground" Value="#FF6441A5"/>
        </Style>
    </Application.Resources>

</Application>
