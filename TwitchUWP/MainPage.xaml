<Page
    x:Class="TwitchUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwitchUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:TwitchUWP.Models" 
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Name="BackButton" 
                    Content="&#xE0C4;"
                    Style="{ThemeResource IconButton}" Click="BackButton_Click"/>
            
            <TextBlock Name="PageTitle" Style="{ThemeResource PageTitleStyle}"/>
        </StackPanel>

        <Frame Name="NavFrame" Grid.Row="1"></Frame>
    </Grid>

</Page>
